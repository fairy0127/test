class Solution {
    public boolean isPalindrome(int x) {
        String numStr = String.valueOf(x);
        int len = numStr.length()/2;
        boolean ret = true;
        for(int i=0; i< len; i++)
        {
            if(numStr.charAt(i) != numStr.charAt(numStr.length()-1-i))
            {
                ret = false;
                break;
            }
        }
        return ret;

    }
}
