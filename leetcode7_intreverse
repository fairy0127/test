class Solution {
    public int reverse(int x) {
        int sign = 1;
        long retValue=0;
        long midValue = x;

        if(midValue<0)
        {
            sign = -1;
            midValue = sign*midValue;
        }
        while(midValue>=10)
        {
            retValue = retValue*10+midValue%10;
            midValue = midValue/10;

        }
        if(midValue<10)
        {
           retValue = retValue*10+midValue;
        }
        if(retValue > Integer.MAX_VALUE) return 0;
        if(retValue < Integer.MIN_VALUE) return 0;
        return (int)retValue*sign;

    }
}
